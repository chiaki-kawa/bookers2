

<main>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th><th>Title</th><th>Opinion</th><th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.get_image %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          <% end %>
        </tbody>
      </table>
  </div>
</main>