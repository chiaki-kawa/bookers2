<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class>
          <tbody>
            <tr></tr>
            <tr><th>name</th><th><%= @user.name %></th></tr>
            <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "edit", edit_user_path(@user.id), class: "btn btn-secondary" %>
        </div>

        <h2 class="mt-3">New Book</h2>
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
  </div>

 <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
     <thead>
       <tr>
         <th></th><th>title</th><th>Opinion</th>
       </tr>
     </thead>
     <tbody>
        <tr>
          <% @books.each do |book| %>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
  　　        <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
          <% end %>
        </tr>

     </tbody>
   </table>
 </div>

</main>